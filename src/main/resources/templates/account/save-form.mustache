{{>layout/header}}
<!--margin : mt, mr, mb, ml (1~5) ex) mt-5-->
<div class="container mt-2">
    <div class="mt-4 p-5 bg-light text-body rounded">
        <h1>계좌생성</h1>
        <form action="/account/save" method="post">
            <div class="mb-3 mt-3">
                <input type="text" class="form-control" placeholder="계좌번호" name="number" value="4444">
            </div>
            <!-- number -->

            <div class="mb-3">
                <input type="password" class="form-control" placeholder="비밀번호" name="password" value="1234">
            </div>
            <!-- password -->

            <div class="mb-3 mt-3">
                <input type="text" class="form-control" placeholder="금액" name="balance" value="1000">
            </div>
            <!-- balance -->

            <button type="submit" class="btn btn-primary">계좌생성</button>
        </form>
    </div>
</div>
<!-- .container end -->
